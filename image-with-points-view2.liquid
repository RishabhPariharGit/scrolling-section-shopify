<style>
.anytime-anywhere-section-main-wrapper {
  background-color: #edf1f5;
  margin:{{ section.settings.section-main-margin }}px;
  border-radius:20px;
}

.main-content-wrapper-main {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin:  auto;
  padding:{{section.settings.section-main-padding}}px;
}


.main-image-container-main {
  flex: 1;
  min-width: 300px;
  max-width: 500px;
  margin: 20px;
}

.main-image-container-main img {
  width: 100%;
  border-radius: 10px;
  object-fit: cover;
}


.main-text-container-main {
  flex: 2;
  min-width: 300px;
  padding: 20px;
}

.main-text-container-main h2 {
  font-size: 28px;
  margin-bottom: 20px;
  font-weight:800;
}

.main-text-container-main p {
  font-size: 16px;
  margin-bottom: 20px;
  color: black;
  line-height: 25px;
}

.main-features-container-main {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.feature-main-container {
  flex: 1;
  min-width: 200px;
  background-color: #fff;
  border-radius: 10px;
  padding: 30px;
}

.feature-main-container h4 {
  font-size: 1.7rem;
  margin-bottom: 10px;
  font-weight:800;
}

.feature-main-container p {
  font-size: 16px;
  color: black;
}



@media (max-width: 768px) {

  .anytime-anywhere-section-main-wrapper {
  background-color: #edf1f5;
  margin:{{ section.settings.section-main-margin-mobile }}px;
  border-radius:20px;
}

.main-content-wrapper-main {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin:  auto;
  padding:{{section.settings.section-main-padding-mobile}}px;
}
  
  .main-content-wrapper-main {
    flex-direction: column;
  }

  .main-image-container-main {
    margin-bottom: 20px;
  }

  .main-features-container-main {
    flex-direction: column;
    gap: 15px;
  }
}
</style>
 
