<script>
  const searchInput = document.getElementById('searchInput');
  const stateDropdown = document.querySelector('.ui.search.dropdown');
  const cardswrapper = document.querySelectorAll('.main-map-card-wrapper-main-wrapper');
  const cards = document.querySelectorAll('.mn-card-wrapper');
  const noResultsMessage = document.getElementById('noResultsMessage');
  const viewMoreButton = document.getElementById('viewMoreButton');
  const stateTitles = document.querySelectorAll('.state_name_rpp');
  let cardsToShow = 100;

  function filterCards() {
    const query = searchInput.value.toLowerCase();
    const selectedState = stateDropdown.value.toLowerCase();
    let hasResults = false;

    // hide/show all state titles depending on search input
    stateTitles.forEach(title => {
      title.style.display = query.trim() !== "" ? 'none' : 'block';
    });

    // show/hide cards
    cards.forEach(card => {
      const title = card.innerText.toLowerCase();
      const cardState = card.getAttribute('data-state');
      const matchesSearch = title.includes(query);
      const matchesState = selectedState === "" || cardState === selectedState;

      if (matchesSearch && matchesState) {
        card.style.display = 'block';
        hasResults = true;
      } else {
        card.style.display = 'none';
      }
    });

    // show/hide "no results" message
    noResultsMessage.style.display = hasResults ? 'none' : 'block';
    if (viewMoreButton) viewMoreButton.style.display = 'none';

    // âœ… Set padding of wrapper based on whether results are found
    cardswrapper.forEach(wrapper => {
      wrapper.style.padding = hasResults ? '0px 45px 0px 45px' : '20px';
        wrapper.style.margin = hasResults ? '0px 0px 0px 0px' : '30px';  // change 20px to your original padding value
    });
  }

  searchInput.addEventListener('input', filterCards);
  stateDropdown.addEventListener('change', filterCards);

  document.addEventListener('DOMContentLoaded', () => {
    cards.forEach((card, index) => {
      card.style.display = index < cardsToShow ? 'block' : 'none';
    });
  });
</script>





